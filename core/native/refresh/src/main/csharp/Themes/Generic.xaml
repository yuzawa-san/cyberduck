<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Cyberduck.Core.Refresh.CustomControls">

    <Style TargetType="{x:Type local:ProfileElement}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ProfileElement}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <CheckBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="0" Grid.RowSpan="2" />
                        <Image Width="24" Grid.Column="1" Grid.Row="2" />

                        <TextBlock Text="SpectraS3" FontWeight="Heavy" Grid.Column="2" Grid.Row="0" />
                        <TextBlock Text="SpectraS3 (HTTPS)" Grid.Column="2" Grid.Row="1" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
